#!/bin/sh

git branch -r | \
  grep -v '\->' | \
  sed "s,\x1B\[[0-9;]*[a-zA-Z],,g" | \
  sed "s,origin/,,g" | \
  while read remote; do

if git rev-parse "refs/remotes/origin/$remote" > /dev/null 2>&1; then
  git fetch origin "$remote":"$remote"
else
  git branch --track "$remote" "origin/$remote"
fi
done